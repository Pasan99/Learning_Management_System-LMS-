<html lang="en">
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Latest compiled and minified CSS -->
    <!-- CSS only -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body style=" overflow-y: hidden;">
    <div class="area page-container">
        <div class="row">
            <div class="col">

            </div>
            <div class="col">
                <a class="float-right" style="font-size:14px;" href="/Admin/MyProfile">@(!string.IsNullOrEmpty(Convert.ToString(Session["UserName"])) ? Session["UserName"] + "  (" + Session["UserRole"] + ")" : "")</a>
            </div>
        </div>
        <hr />
        @RenderBody()
    </div>
    <nav class="main-menu">
        <ul>
            <li>
                <a href="/Admin/Index">
                    <i class="fa fa-home fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Home
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="/Admin/Courses">
                    <i class="fa fa-certificate fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Courses
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="/Admin/Subjects">
                    <i class="fa fa-book  fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Subjects
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="/Admin/Assignments">
                    <i class="fa fa-list-ul  fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Assignments
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="/Admin/Users">
                    <i class="fa fa-users  fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Users
                    </span>
                </a>

            </li>
            <li class="has-subnav">
                <a href="/Admin/Help">
                    <i class="fa fa-info fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Help
                    </span>
                </a>

            </li>

        </ul>
        <ul class="logout">
            <li>
                <a href="/Admin/Logout">
                    <i class="fa fa-power-off fa-2x" style="margin-top:5px;"></i>
                    <span class="nav-text">
                        Logout (@(!string.IsNullOrEmpty(Convert.ToString(Session["UserName"])) ? Session["UserName"] + "  - " + Session["UserRole"]  : ""))
                    </span>
                </a>
            </li>
        </ul>
    </nav>
</body>
</html>
