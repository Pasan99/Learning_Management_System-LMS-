@model IEnumerable<EastWood.ViewModel.Admin.LectureNoteItem>
@{
    ViewBag.Title = "Lecture Notes";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js"></script>
<div class="row">
    <div class="col">
        <h1>Lecture Notes</h1>
    </div>
    <div class="col">
        <a href="/Admin/NewLectureNote?SubjectId=@ViewBag.SubjectId" class="btn btn-primary float-right">New Notes</a>
    </div>
</div>
<br />

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Subject</th>
            <th>Lecture Date</th>
            <th>Submitted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td style="width:3%">@course.LectureNote.LectureNoteid</td>
                <td style="width:25%">@course.LectureNote.LectureNoteName</td>
                <td style="width:25%">@course.Subject.SubjectName</td>
                <td style="width:10%">@course.LectureNote.LectureNoteDate</td>
                <td style="width:15%">@course.LectureNote.LectureNoteSubmittedOn</td>
                <td style="width:5%" class="text-center">
                    <a href="/Admin/NewLectureNote/@course.LectureNote.LectureNoteid" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

