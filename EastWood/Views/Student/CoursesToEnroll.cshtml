@model EastWood.ViewModel.Admin.CoursesViewModel
@{
    ViewBag.Title = "Courses";
    Layout = "/Views/Shared/_StudentLayout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js"></script>
<div class="row">
    <div class="col">
        <h1>Courses</h1>
    </div>
    <div class="col">
        
    </div>
</div>
<br />

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Coordinator</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td style="width:3%">@course.CourseId</td>
                <td style="width:15%">@course.CourseName</td>
                <td style="width:30%">@course.CourseDescription</td>
                <td style="width:10%">@(course.CoordinatorDetails.UserFirstName + " " + course.CoordinatorDetails.UserLastName)</td>
                <td style="width:15%">@course.CourseStartsOn</td>
                <td style="width:15%">@course.CourseEndsOn</td>
                <td class="text-center">
                    <a href="/Student/Enroll/@course.CourseId" class="btn btn-primary">Enroll</a>
                </td>
            </tr>
        }

    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>